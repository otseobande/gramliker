{
	"manifest_version": 2,

	"name" : "Instaliker",
	"description": "Smart Instagram Bot",
	"version" : "1.0",

	"browser_action":{
		"default_popup": "./html/popup.html"
	},

	"background":{
		//"scripts": ["./js/background.js"],
		"page": "./html/background.html",
		"persistent": true
	

	},

	"permissions":[
		"background",
		"tabs",
		"cookies",
		"*://*.instagram.com/",
		"alarms",
	    "power",
	    "storage",
	    "unlimitedStorage",
	    "webRequest",
	    "webRequestBlocking",
		"*://*.instagram.com/"
		
	]
}